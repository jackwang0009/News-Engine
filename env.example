# News Engine 环境变量配置
# 复制此文件为 .env 并根据实际情况修改

# ==================== 基础配置 ====================
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=9000
SECRET_KEY=your-secret-key-here-change-in-production

# ==================== 数据库配置 ====================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=news_engine
POSTGRES_USER=news_engine
POSTGRES_PASSWORD=password
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=news_engine

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://${ELASTICSEARCH_HOST}:${ELASTICSEARCH_PORT}

# ==================== Celery配置 ====================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TIMEZONE=Asia/Shanghai
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# ==================== 爬虫配置 ====================
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_DELAY=1
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_CONCURRENT_REQUESTS=16

# 代理配置
PROXY_ENABLED=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ==================== 数据处理配置 ====================
PROCESSOR_BATCH_SIZE=100
PROCESSOR_MAX_WORKERS=4
PROCESSOR_TIMEOUT=300

# NLP配置
NLP_ENABLED=true
NLP_MODEL_PATH=./models
NLP_LANGUAGE=zh

# ==================== 索引配置 ====================
INDEX_BATCH_SIZE=50
INDEX_MAX_WORKERS=2
INDEX_REFRESH_INTERVAL=1s

# ==================== 监控配置 ====================
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
FLOWER_PORT=5555

# ==================== 日志配置 ====================
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# ==================== 安全配置 ====================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==================== 外部API配置 ====================
# 新闻API密钥（如果有的话）
NEWS_API_KEY=
NEWS_API_URL=

# ==================== 文件存储配置 ====================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/*,text/*

# ==================== 邮件配置 ====================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# ==================== 通知配置 ====================
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
